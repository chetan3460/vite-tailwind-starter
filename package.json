{
  "name": "vite-tailwind-starter",
  "version": "1.0.4",
  "type": "module",
  "description": "Modern Vite + Tailwind CSS v4 starter template with TypeScript, testing, and best practices",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rm -rf dist .vite",
    "prebuild": "npm run clean && npm run generate:version",
    "build": "vite build",
    "postbuild": "npm run optimize:images",
    "build:analyze": "vite build --mode analyze",
    "generate:version": "node scripts/generateVersion.js",
    "optimize:images": "npm run webp:build && npm run webp:copy && npm run webp:cleanup && npm run webp:clean-tmp",
    "webp:build": "node scripts/generate-webp-dist.js",
    "webp:copy": "node scripts/copy-webp-to-dist.js",
    "webp:cleanup": "node scripts/cleanup-images.js",
    "webp:clean-tmp": "node scripts/cleanup-webp-temp.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run type-check && npm run test:run",
    "bump:patch": "npm version patch && npm run build",
    "bump:minor": "npm version minor && npm run build",
    "bump:major": "npm version major && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "connect-history-api-fallback": "^2.0.0",
    "eslint": "^9.16.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "happy-dom": "^15.11.7",
    "imagemin": "^9.0.1",
    "imagemin-webp": "^8.0.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "1.77.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.2",
    "vite": "^7.0.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html-insert": "^1.0.1",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@fancyapps/ui": "^5.0.36",
    "@iconscout/unicons": "^4.2.0",
    "@mdi/font": "^7.4.47",
    "@mdi/js": "^7.4.47",
    "@tailwindcss/vite": "^4.1.11",
    "@vitejs/plugin-legacy": "^7.0.1",
    "crypto-browserify": "^3.12.1",
    "feather-icons": "^4.29.2",
    "gsap": "^3.12.5",
    "swiper": "^11.1.12"
  }
}
